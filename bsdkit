echo_bsdkit_public_key()
{
    cat << EOF
ssh-rsa  bsdkit
EOF
}

if ! which ansible-playbook > /dev/null 2>&1; then
    echo "Required command missing: ansible-playbook"
    # EX_UNAVAILABLE
    exit 69
fi

if [ $# -gt 0 ]; then
    eval "$@"
fi

# References:
#   https://wiki.freebsd.org/AvgLiveCD
#   https://wiki.freebsd.org/RootOnZFS/ZFSBootPartition

# Local Variables:
# mode: sh
# sh-indentation: 4
# sh-basic-offset: 4
# End:
