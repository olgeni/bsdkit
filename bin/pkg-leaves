#!/bin/sh
#
# pkg-leaves - Interactively delete leaf packages
#
# Shows installed packages that have no reverse dependencies (nothing
# depends on them). Uses fzf for interactive multi-selection of
# packages to delete.
#

set -e -u

if ! command -v fzf > /dev/null 2>&1; then
    error "required command missing (fzf)"
    # EX_UNAVAILABLE
    exit 69
fi

_f1=$(mktemp /tmp/XXXXXX)

pkg query -e "%?r == 0" "%o" | sort -u > ${_f1}

eval pkg delete $(cat ${_f1} | fzf --multi --height=50%)

rm -f ${_f1}
